# Write your code here
import random

guess_list = ["python", "java", "kotlin", "javascript"]
guess_word = random.choice(guess_list)
first_three = guess_word[0:3]
dashes = ("-" * (len(guess_word) - 3))

print("H A N G M A N")

guessed_word = input("Guess the word " + first_three + dashes + ":")

if guessed_word == guess_word:
    print("You survived!")
else:
    print("You are hanged!")
